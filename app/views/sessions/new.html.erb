<main class="login-page">
  <section class="login-card">
    <h1>간편 로그인</h1>
    <p>테스트용 계정으로 로그인하세요.</p>

    <% if flash[:alert] %>
      <div class="chat-alert"><%= flash[:alert] %></div>
    <% end %>

    <% if flash[:notice] %>
      <div class="chat-notice"><%= flash[:notice] %></div>
    <% end %>

    <%= form_with url: login_submit_path, method: :post, local: true, class: "login-form" do |form| %>
      <label for="email">이메일</label>
      <%= form.email_field :email, id: "email", required: true, autofocus: true, autocomplete: "email" %>

      <label for="password">비밀번호</label>
      <%= form.password_field :password, id: "password", required: true, autocomplete: "current-password" %>

      <%= form.submit "로그인" %>
    <% end %>
  </section>
</main>
