# Rails runtime
RAILS_ENV=development
APP_TIME_ZONE=UTC
RAILS_MASTER_KEY=replace_with_rails_master_key
SECRET_KEY_BASE=replace_with_secret_key_base
DATABASE_URL=postgresql://username:password@localhost:5432/app_development
APP_HOST=http://localhost:3000

# Initial admin bootstrap
INITIAL_ADMIN_EMAIL=owner@example.com

# Google OAuth (sign-in only)
GOOGLE_OAUTH_CLIENT_ID=replace_with_google_oauth_client_id
GOOGLE_OAUTH_CLIENT_SECRET=replace_with_google_oauth_client_secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/users/auth/google_oauth2/callback
GOOGLE_OAUTH_ALLOWED_DOMAIN=

# Google Sheets (app-owned service account)
GOOGLE_APPLICATION_CREDENTIALS=C:\path\to\service-account.json
SPREADSHEET_ID=replace_with_google_sheet_id
GOOGLE_SHEETS_TEMPLATE_SHEET_NAME=TEMPLATE
GOOGLE_SHEETS_MASTER_SHEET_NAME=MASTER
GOOGLE_SHEETS_TIMEOUT_MS=1000
GOOGLE_SHEETS_OPEN_TIMEOUT_MS=500

# Optional (for background jobs/cache)
REDIS_URL=redis://localhost:6379/1
